{
  "name": "code-helper",
  "version": "1.0.0",
  "description": "Intelligent, context-aware code helper that works with any editor",
  "main": "./src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-all": "electron-builder --mac --win",
    "pack": "electron-builder --dir",
    "test": "node scripts/test.js",
    "test-integration": "node scripts/integration-test.js"
  },
  "keywords": [
    "code",
    "assistant",
    "editor",
    "overlay",
    "cross-platform",
    "electron",
    "development",
    "refactoring",
    "suggestions"
  ],
  "author": "Code Helper Team",
  "license": "MIT",
  "build": {
    "appId": "com.codehelper.app",
    "productName": "Code Helper",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json",
      "README.md"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "active-win": "^8.2.1",
    "axios": "^1.10.0",
    "highlight.js": "^11.11.1",
    "robotjs": "^0.6.0"
  }
}
